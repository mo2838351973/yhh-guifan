{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^8.1.3",
    "vuepress": "^1.9.10"
  },
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "init": "pnpm install",
    "clean": "lerna clean && rm -rf node_modules",
    "test": "pnpm run test",
    "docs:dev": "vuepress dev docs",
    "doc:build": "vuepress build docs",
    "deploy": "bash deploy.sh",
    "publish": "lerna publish",
    "lint": "marklint README.md",
    "changelog": "convertional-changelog -p angular -i CHANGLOG.md -s"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  }
}
